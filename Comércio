Algoritmo "Cadastro de Pedidos da Pizzaria"

tipo

dados = registro
fone, nome, rua, bai, cid, est, email, num, cep, cpf: caractere
fimregistro


Var
cadastro: vetor[0..1] de dados
resp, cod, cont, cond, pedido, status, m_qtd_1, m_qtd_2, m_qtd_3: inteiro
comp, fim, fones, m_a_m, piz_1, piz_2, piz_3, m_piz_1, m_piz_2, m_piz_3, obs: caractere
beb_1, beb_2, beb_3:caractere
opt, i, j, s, p_mam, metade, p_int, qtd_1, qtd_2, qtd_3, beb, b_qtd_1, b_qtd_2, b_qtd_3: inteiro
c_1, c_2, c_3 , m_c_1, m_c_2, m_c_3, b_c_1, b_c_2, b_c_3, retmenu: inteiro
pmam, pint, valorpizzameio, valorpizzainteiro, tempoentrega,total,totalpedido, val_beb: real

função calculototalpedido(valorpizzameio,valorpizzainteiro,val_beb : real) : real
inicio

      totalpedido <- (valorpizzameio + valorpizzainteiro + val_beb)

fimfunção

procedimento menu()

inicio

repita
 escreval("--------------------------------------")
 escreval("--------------PIZZARIA ---------------")
 escreval("----------NAPOLI BON GIORNO-----------")
 escreval("----------------MENU------------------")
 escreval("--------------------------------------")
 escreval("")
 escreval(" (1) Cadastrar Novo Cliente")
 escreval(" (2) Buscar Cliente por nº de Telefone e efetuar pedido")
 escreval(" (3) Cardapio de Pizzas")
 escreval(" (4) Sair")
 escreval("")
 escreva("Digite a opção desejada: ")
 leia(opt)
  escolha (opt)
   caso 1
       limpatela
       cadastro()
  caso 2
       limpatela
       buscar_usuario()
  caso 3
       limpatela
       cardapio()
  caso 4
       limpatela
       escreval("Aplicação encerrada, Volte Sempre")
  outrocaso
       escreval("Opção Invalida")
  fimescolha
ate (opt = 4)

fimprocedimento

procedimento cadastro()

inicio

repita
se cont = 2 entao
escreval("Não Há Mais Espaço Disponivel Para Novos Cadastros")
escreval("")
menu()
senao

escreval("Cadastre aqui um Novo Cliente")
escreval("Qual o nome do Cliente")
               leia (cadastro[cont].nome)
escreval("Qual o nº de Telefone")
               leia (cadastro[cont].fone)
escreval("Qual o nº do CPF")
               leia (cadastro[cont].cpf)
escreval("Qual endereço de email")
               leia (cadastro[cont].email)
escreval("Qual Nome da rua do cliente")
               leia (cadastro[cont].rua)
escreval("Numero da residência")
                 leia (cadastro[cont].num)
escreval("Qual estado")
               leia (cadastro[cont].est)
escreval("Qual Cidade")
               leia (cadastro[cont].cid)
escreval("Qual o Bairro")
               leia (cadastro[cont].bai)
escreval("Qual o CEP")
leia (cadastro[cont].cep)
cont <- cont+1

Limpatela
Escreval("deseja fazer um novo cadastro?")
escreval("1 = SIM | 2 = NÃO")
fimse
leia(fim)

até fim = "2"

fimprocedimento

procedimento cardapio()
inicio
limpatela
escreval ("CARDÁPIO DA PIZZARIA")
escreval ("")
       escreval("Sabores das Pizzas")
       escreval("Pizza de Mussarela -> 40,00 R$")
       escreval("Ingredientes: Mussarela e Oregano")
       escreval("")
       escreval("Pizza de Calabresa -> 42,00 R$")
       escreval("Ingredientes: Mussarela e Calabresa fatiada")
       escreval("")
       escreval("Pizza de Peperoni -> 50,00 R$ ")
       escreval("Ingredientes: Mussarela e Salame Peperoni")
       escreval("")
       escreval("Bebidas")
       escreval("Coca-Cola Lata -> 4,50 R$ ")
       escreval("Refrigerante Coca-Cola 350ml")
       escreval("")
       escreval("Dolly Guaraná Garrafa -> 8,90 R$ ")
       escreval("Refrigerante Dolly Sabor guaraná, Garrafa 2 Litros")
       escreval("")
       escreval("Suco de Laranja -> 6,00 R$ ")
       escreval("Suco natural sabor laranja, 400ml")
       escreval("")
escreval ("")
escreval("Pressione ENTER para retornar ao MENU")
leia (retmenu)
limpatela
menu()
fimprocedimento

procedimento buscar_usuario()
inicio
status <- 0
i <- 0
limpatela
escreva("Digite o numero de telefone: ")
leia(fones)
para i de 0 ate 1 faca
    se fones = cadastro[i].fone entao
      escreval("")
      escreval("")
      escreval("Dados do Cliente")
      escreval("Nome: ", cadastro[i].nome, "  Fone: ", cadastro[i].fone)
      escreval("Endreço: ", cadastro[i].rua, "  Nº: ", cadastro[i].num)
    status <- 1
    fimse
fimpara
    se (status = 0) entao
      escreval("")
      escreval("Cadastro Não Encontrado")
    fimse
escreval("")
escreval("")
escreval("Escolha Uma Opção A seguir?")
escreval(" (1) -> Buscar outro Cliente")
escreval(" (2) -> Cadastrar novo Cliente")
escreval(" (3) -> Seguir para pedido")
leia (resp)
  escolha resp
    caso 1
      buscar_usuario()
    caso 2
      limpatela
      cadastro()
    caso 3
      pedido()
  fimescolha
fimprocedimento


procedimento pedido()
inicio
limpatela

repita
 limpatela
 escreval("Tipos de Pizza")
 escreval(" (1) -> Incluir no pedido Pizza Meio a Meio")
 escreval(" (2) -> Incluir no pedido uma Pizza Inteira")
 escreval(" (3) -> Incluir no pedido uma Bebida")
 escreval("")
 leia (m_a_m)
     se (m_a_m = "1") entao
       limpatela
       escreval("Escolha 2 sabores para a Pizza meio a meio")
       escreval("")
       escreval("(1) - Pizza de Mussarela -> 20,00 R$")
       escreval("Ingredientes: Mussarela e Oregano")
       escreval("")
       escreval("(2) - Pizza de Calabresa -> 21,00 R$")
       escreval("Ingredientes: Mussarela e Calabresa fatiada")
       escreval("")
       escreval("(3) - Pizza de Peperoni -> 25,00 R$")
       escreval("Ingredientes: Mussarela e Salame Peperoni")
       escreval("")
       repita
         leia(p_mam)
         escolha (p_mam)
         caso 1
           valorpizzameio <- valorpizzameio + 40/2
           tempoentrega <- tempoentrega + 1
           metade<- metade + 1
           m_piz_1 <- "Meia Pizza de Mussarela -> 20,00 R$"
           m_qtd_1 <- 1 + m_qtd_1
           m_c_1 <- 1
         caso 2
           valorpizzameio <- valorpizzameio + 42/2
           tempoentrega <- tempoentrega + 1
           metade<- metade + 1
           m_piz_2 <- "Meia Pizza de Calabresa -> 21,00 R$"
           m_qtd_2 <- 1 + m_qtd_2
           m_c_2 <- 1
         caso 3
           valorpizzameio <- valorpizzameio + 50/2
           tempoentrega <- tempoentrega + 1
           metade <- metade + 1
           m_piz_3 <- "Meia Pizza de Peperoni -> 25,00 R$"
           m_qtd_3 <- 1 + m_qtd_3
           m_c_3 <- 1
         outrocaso
           escreval("Escolha um código válido")
         fimescolha
       ate metade = 2
       metade<-0
       escreval("")
       escreval("Deseja Finalizar o pedido?")
       escreval("  (1) = SIM  | (2) = NÃO  ")
       leia (pedido)
     fimse
     
  //zerar contadores de pizza para novos pedidos
  se (m_a_m = "2") então
    limpatela
    escreval("")
    escreval("(1) - Pizza de Mussarela -> 40,00 R$")
    escreval("Ingredientes: Mussarela e Oregano")
    escreval("")
    escreval("(2) - Pizza de Calabresa -> 42,00 R$")
    escreval("Ingredientes: Mussarela e Calabresa fatiada")
    escreval("")
    escreval("(3) - Pizza de Peperoni -> 50,00 R$ ")
    escreval("Ingredientes: Mussarela e Salame Peperoni")
    escreval("")
    leia(p_int)
    escolha (p_int)
      caso 1
        valorpizzainteiro <- valorpizzainteiro + 40
        tempoentrega <- tempoentrega + 2
        piz_1 <- "Pizza de Mussarela -> 40,00 R$"
        qtd_1 <- 1 + qtd_1
        c_1 <- 1
      caso 2
        valorpizzainteiro <- valorpizzainteiro + 42
        tempoentrega <- tempoentrega + 2
        piz_2 <- "Pizza de Calabresa -> 42,00 R$"
        qtd_2 <- 1 + qtd_2
        c_2 <- 1
      caso 3
        valorpizzainteiro <- valorpizzainteiro + 50
        tempoentrega <- tempoentrega + 2
        piz_3 <- "Pizza de Peperoni -> 50,00 R$"
        qtd_3 <- 1 + qtd_3
        c_3 <- 1
      outrocaso
        escreval("Escolha um código válido")
    fimescolha
    escreval("Deseja Finalizar o pedido?")
    escreval("  (1) = SIM  | (2) = NÃO  ")
    leia (pedido)
  fimse
  //inserção de bebida
  se (m_a_m = "3") então
    limpatela
     escreval("Bebidas")
       escreval(" (1) - Coca-Cola Lata -> 4,50 R$ ")
       escreval("Refrigerante Coca-Cola 350ml")
       escreval("")
       escreval(" (2) - Dolly Guaraná Garrafa -> 8,90 R$ ")
       escreval("Refrigerante Dolly Sabor guaraná, Garrafa 2 Litros")
       escreval("")
       escreval(" (3) - Suco de Laranja -> 6,00 R$ ")
       escreval("Suco natural sabor laranja, 400ml")
    leia(beb)
    escolha (beb)
      caso 1
        val_beb <- val_beb + 4.50
        tempoentrega <- tempoentrega + 0
        beb_1 <- "Coca-Cola Lata -> 4,50 R$"
        b_qtd_1 <- 1 + b_qtd_1
        b_c_1 <- 1
      caso 2
        val_beb <- val_beb + 8.90
        tempoentrega <- tempoentrega + 0
        beb_2 <- "Dolly Guaraná Garrafa -> 8,90 R$"
        b_qtd_2 <- 1 + b_qtd_2
        b_c_2 <- 1
      caso 3
        val_beb <- val_beb + 6
        tempoentrega <- tempoentrega + 1
        beb_3 <- "Suco de Laranja -> 6,00 R$"
        b_qtd_3 <- 1 + b_qtd_3
        b_c_3 <- 1
      outrocaso
        escreval("Escolha um Código Válido")
    fimescolha
    escreval("Deseja Finalizar o pedido?")
    escreval("  (1) = SIM  | (2) = NÃO  ")
    leia (pedido)
  fimse
  //fim da inserção

  
ate pedido = 1





total <- calculototalpedido(valorpizzameio, valorpizzainteiro, val_beb)
limpatela

escreval("Descrição do Pedido")
se c_1 > 0 entao
  escreval(qtd_1, " ", piz_1)
fimse
se c_2 > 0 entao
  escreval(qtd_2, " ", piz_2)
fimse
se c_3 > 0 entao
  escreval(qtd_3, " ", piz_3)
fimse
se m_c_1 > 0 entao
  escreval(m_qtd_1, " ", m_piz_1)
fimse
se m_c_2 > 0 entao
  escreval(m_qtd_2, " ", m_piz_2)
fimse
se m_c_3 > 0 entao
  escreval(m_qtd_3, " ", m_piz_3)
fimse
se b_c_1 > 0 entao
  escreval(b_qtd_1, " ", beb_1)
fimse
se b_c_2 > 0 entao
  escreval(b_qtd_2, " ", beb_2)
fimse
se b_c_3 > 0 entao
  escreval(b_qtd_3, " ", beb_3)
fimse
escreval("  Valor da Entrega -> 5,00 R$")
escreval("")
escreval("Valor Total do Pedido: ", (totalpedido + 5):1:2, " R$")
escreval("")
escreval("Tempo de Entrega", ((tempoentrega * 5) + 10), " Minutos")
escreval("")
escreval("O Pedido possui alguma observação?")
leia(obs)
escreval("")
para i de 0 ate 1 faca
    se fones = cadastro[i].fone entao
      escreval("Dados do Cliente para Envio")
      escreval("Nome: ", cadastro[i].nome, "  Fone: ", cadastro[i].fone)
      escreval("Endreço: ", cadastro[i].rua, "  Nº: ", cadastro[i].num)
      escreval("")
      escreval("")
    fimse
fimpara
escreval("Pressione ENTER para retornar ao MENU")
leia (retmenu)
limpatela
menu()
fimprocedimento


Inicio
menu()



